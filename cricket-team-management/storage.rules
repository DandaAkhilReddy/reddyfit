rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthenticated() &&
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isValidImageUpload() {
      return request.resource.size < 5 * 1024 * 1024 // 5MB max
             && request.resource.contentType.matches('image/.*');
    }

    function isValidDocumentUpload() {
      return request.resource.size < 10 * 1024 * 1024 // 10MB max
             && (request.resource.contentType.matches('image/.*') ||
                 request.resource.contentType.matches('application/pdf'));
    }

    // Player photos
    match /players/{playerId}/{allPaths=**} {
      allow read: if true; // Public read
      allow write: if isAdmin() ||
                      (isAuthenticated() &&
                       firestore.get(/databases/(default)/documents/players/$(playerId)).data.userId == request.auth.uid &&
                       isValidImageUpload());
    }

    // Match photos
    match /matches/{matchId}/{allPaths=**} {
      allow read: if true; // Public read
      allow write: if isAdmin() && isValidImageUpload();
    }

    // Equipment photos
    match /equipment/{equipmentId}/{allPaths=**} {
      allow read: if true; // Public read
      allow write: if isAdmin() && isValidImageUpload();
    }

    // Expense receipts
    match /receipts/{receiptId} {
      allow read: if isAuthenticated(); // Team members only
      allow write: if isAdmin() && isValidDocumentUpload();
    }

    // Leadership photos
    match /leadership/{leaderId}/{allPaths=**} {
      allow read: if true; // Public read
      allow write: if isAdmin() && isValidImageUpload();
    }

    // Sponsor logos
    match /sponsors/{sponsorId}/{allPaths=**} {
      allow read: if true; // Public read
      allow write: if isAdmin() && isValidImageUpload();
    }
  }
}
